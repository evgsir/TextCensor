<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:ViewModel />
    </Window.DataContext>
    <StackPanel>
        <TextBox
            x:Name="PathBox"
            Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay }"
                 ></TextBox>
        <Button Command = "{Binding CenseFile}"
        >
            Knopka
        </Button>
        <Button x:Name="PathFinder" Click="PathFinder_OnClick">Path</Button>
        <TextBlock Text="{Binding CountWords, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <TextBlock Text="{Binding CountLetters, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <ListBox ItemsSource="{Binding Words}"></ListBox>
    </StackPanel>
</Window>
